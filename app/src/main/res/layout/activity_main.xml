<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="°C"
        android:id="@+id/txtTemperatura"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/txtTemperatura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0,0°C"
        android:id="@+id/txtRecibetemp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:id="@+id/btnConvertir"
        android:layout_marginTop="96dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtRecibetemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0,0°F"
        android:id="@+id/txtFarenheit"
        android:textStyle="bold"
        android:layout_below="@+id/btnConvertir"
        android:layout_alignRight="@+id/btnConvertir"
        android:layout_alignEnd="@+id/btnConvertir"
        android:layout_marginTop="106dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0,0 K"
        android:id="@+id/txtKelven"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtFarenheit"
        android:layout_toRightOf="@+id/txtRecibetemp"
        android:layout_toEndOf="@+id/txtRecibetemp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />
</RelativeLayout>
